@model IEnumerable<Department>

@{
    ViewData["Title"] = "All Departments";
}

<a asp-action="Create" class="btn-success"> Create New Department</a>
@if(Model.Count()>0)
{
    <h1>All Departments </h1>
    <br />
    <table class=" table table-striped table-hover mt-3">
        <thead>
            <tr>
          
        <td>  @Html.DisplayNameFor(D=>D.Code) </td>
        <td>  @Html.DisplayNameFor(D=>D.Name) </td>
        <td>  @Html.DisplayNameFor(D=>D.DateOfCreation) </td>
       <td>Details</td>
        <td>update</td>
        <td>Delete</td>
            </tr>
     </thead>
      
        <tbody>
            @foreach(var depat in Model)
            {
                <tr>
                    <td>@depat.Code</td>
                    <td>@depat.Name</td>
                    <td>@depat.DateOfCreation</td>
                  
                    <Partial name="_ButtonParitialView" model="@depat.Id.ToString()"></Partial>
                 </tr>
                
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There Is NO Department </h3>
    </div>
}

