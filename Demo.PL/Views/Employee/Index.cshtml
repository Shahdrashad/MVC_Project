@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Home";
}

<h1>@ViewData["Message"]</h1>

<a asp-action="Create" class="btn btn-primary mt-2"> Create New Employee</a>
@if(Model.Count()>0)
{
    <h1>All Employees </h1>
    <br />
    <div class="m-2">
        <form class="row offset-2" asp-action="Index" method="get">
            <div class="col-10">
                <input class="form-control" type="text" name="Search" placeholder="Employees,s Name">
            </div>
            <div class="col-2">
                <input class="btn btn-info" type="submit" value="Search">

            </div>


        </form>
    </div>
    
    <table class=" table table-striped table-hover mt-3">
        <thead>
            <tr>
          
                <td>  @Html.DisplayNameFor(D=>D.Name) </td>
                <td>  @Html.DisplayNameFor(D=>D.Age) </td>
                <td>  @Html.DisplayNameFor(D=>D.Address) </td>
                <td>  @Html.DisplayNameFor(D=>D.Departments) </td>
                <td>  @Html.DisplayNameFor(D=>D.Salary) </td>
                <td>  @Html.DisplayNameFor(D=>D.Phone) </td>
                <td>  @Html.DisplayNameFor(D=>D.Email) </td>
                <td>  @Html.DisplayNameFor(D=>D.IsActive) </td>
                <td>  @Html.DisplayNameFor(D=>D.DateOfCreation) </td>

                <td>Details</td>
                <td>update</td>
                <td>Delete</td>
            </tr>
     </thead>
      
        <tbody>
            @foreach(var Emp in Model)
            {
                <tr>
                    
                    <td>@Emp.Name</td>
                    <td>@Emp.Age</td>
                    <td>@Emp.Address</td>
                 
                    <td>@Html.DisplayFor(e=>Emp.Departments.Name)</td>
                    <td>@Html.DisplayFor(e=>Emp.Salary)</td>
                   
                    <td>@Html.DisplayFor(e=>Emp.Phone)</td>
                    <td>@Html.DisplayFor(e=>Emp.Email)</td>
                    <td>@Emp.IsActive</td>
                    <td>@Emp.DateOfCreation</td>

                    <Partial name="_ButtonParitialView" model="@Emp.Id.ToString()"></Partial>
                 </tr>
                
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There Is NO Employee </h3>
    </div>
}

