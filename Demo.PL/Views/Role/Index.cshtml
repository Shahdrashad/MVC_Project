@model IEnumerable<RoleViewModel>

@{
    ViewData["Title"] = "Home";
}

<h1>@ViewData["Message"]</h1>
<a asp-action="Create" class="btn btn-primary mt-2"> Create New Role</a>
@if(Model.Count()>0)
{
    <h1>All Roles</h1>
    <br />
    <div class="m-2">
        <form class="row offset-2" asp-action="Index"method="get">
            <div class="col-10">
                <input class="form-control" type="text" name="Search" placeholder="Employees,s Name">
            </div>
            <div class="col-2">
                <input class="btn btn-info" type="submit" value="Search">

            </div>


        </form>
    </div>
    
    <table class=" table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>  @Html.DisplayNameFor(D=>D.Id) </td>
                <td>  @Html.DisplayNameFor(D=>D.Name) </td>
                



                <td>Details</td>
                <td>update</td>
                <td>Delete</td>
            </tr>
     </thead>
      
        <tbody>
            @foreach(var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                   
                    <Partial name="_ButtonParitialView" model="@role.Id.ToString()"></Partial>
                 </tr>
                
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There Is NO Role </h3>
    </div>
}

