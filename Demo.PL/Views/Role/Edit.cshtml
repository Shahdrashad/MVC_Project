@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
  
}

<h1>Edit @Model.Name Role</h1>

<div asp-validation-summary="All"> </div>

<form asp-action="Edit">
    <Partial name="PartialView/_CreateEdit"></Partial>
    <br />
      
    <a asp-action="AddOrRemoveUser" class="btn btn-info" asp-route-roleid="@Model.Id">Add Or Remove Users</a>
    <input type="submit" value="Save" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">BackToList</a>

</form>
@section  ValidationScriptSection
    {

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    }